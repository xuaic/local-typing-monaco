{
  "name": "@xuaic/local-typing-monaco",
  "version": "1.0.0",
  "description": "A TypeScript definition resolver for Monaco Editor that resolves types from local node_modules",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "example": "npm run build && cd example && npm install && npm run copy-dist && npm start",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "monaco-editor",
    "typescript",
    "types",
    "definition"
  ],
  "author": "xuaic",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/node": "^20.11.19",
    "@types/path-browserify": "^1.0.1",
    "rollup": "^4.12.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.3"
  },
  "dependencies": {
    "path-browserify": "^1.0.1"
  },
  "peerDependencies": {
    "monaco-editor": ">=0.30.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xuaic/local-typing-monaco"
  }
} 